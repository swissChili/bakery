#!/usr/bin/env bash
# this bakery is designed to be usable without Bake installed
# just run it with bash or execute it. You will be prompted
# for root permissions
source ./baketools/baketools.sh
#@bake
c_standard="c++17"
compiler="g++"
echo "Compiling bake with g++"
new_ingredient bake bake.cpp
new_ingredient baketools_cpp baketools/baketools.cpp
new_ingredient bake_deploy deploy.cpp

define_all bake_version 0.1.2
bake_all

#@install
echo "installing bake, super user privileges required"
sudo cp baketools/baketools.sh /usr/bin/baketools.sh
sudo cp bake /usr/bin/bake
sudo cp baketools_cpp /usr/bin/baketools
