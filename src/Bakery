#@bake
echo "Compiling bake with g++"
gcc -std=c++17 -o bake bake.cpp -lstdc++
new_recipe bake bake.cpp
gcc -std=c++17 -o baketool baketools/baketools.cpp -lstdc++

#@install
echo "installing bake, super user privileges required"
sudo cp baketool /usr/bin/baketool
sudo cp baketools/baketools.sh /usr/bin/baketools.sh
sudo cp bake /usr/bin/bake