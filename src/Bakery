#@bake
c_standard="c++17"
compiler="g++"
echo "Compiling bake with g++"
new_ingredient bake bake.cpp
new_ingredient baketool baketools/baketools.cpp
bake_all

#@install
echo "installing bake, super user privileges required"
sudo cp baketools/baketools.sh /usr/bin/baketools.sh
sudo cp bake /usr/bin/bake